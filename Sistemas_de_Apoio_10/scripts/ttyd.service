[Unit]
Description=ttyd Terminal Web Service
After=network.target

[Service]
Type=simple
User=bruno
Group=bruno
Environment=TERM=xterm-256color
Environment=HOME=/home/bruno
WorkingDirectory=/home/bruno
ExecStart=/usr/bin/ttyd \
    --port 7681 \
    --interface 0.0.0.0 \
    bash -l

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target 